<h2>User info</h2>
<table class="table">
<tbody>
  <tr></tr>
  <tr><th>name</th><th><%= user.name %></th></tr>
  <tr><th>introduction</th><th><%= user.introduction %></th></tr>
</tbody>
</table>
<%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
  <i class="fas fa-user-cog"></i>
<% end %>
<h2 class="mt-3">New book</h2>
<%= form_with model: book do |f| %>
  <p>Title</p>
  <%= f.text_field :title, class: "form-control" %>
  <p>Opinion</p>
  <%= f.text_area :body, class: "form-control" %>
  <%= f.submit "Create Book", class: "btn btn-success mt-3" %>
<% end %>